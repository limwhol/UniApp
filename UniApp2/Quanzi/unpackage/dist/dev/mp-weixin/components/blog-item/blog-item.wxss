.blogItem {
  margin-bottom: 30rpx;
  border-bottom: 20rpx solid #f8f8f8;
}
.blogItem .head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.blogItem .head .leftElements {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.blogItem .head .leftElements .avatar {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}
.blogItem .head .leftElements .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.blogItem .head .leftElements .userName {
  padding-right: 10rpx;
  padding-left: 10rpx;
  font-size: 24rpx;
  color: #333333;
}
.blogItem .head .leftElements .postTime {
  padding-right: 10rpx;
  padding-left: 10rpx;
  font-size: 20rpx;
  color: #999999;
}
.blogItem .head .rightElements .threeDots {
  font-size: 22rpx;
}
.blogItem .body .title {
  font-size: 34rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  line-height: 1.4em;
}
.blogItem .body .content {
  font-size: 24rpx;
  margin-bottom: 20rpx;
  color: #666;
  line-height: 1.8em;
}
.blogItem .body .piclist {
  display: flex;
}
.blogItem .body .piclist .pic {
  margin-bottom: 20rpx;
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  margin-right: 5rpx;
}
.blogItem .body .piclist .pic:first-child {
  border-radius: 20rpx 0rpx 0rpx 20rpx;
}
.blogItem .body .piclist .pic:last-child {
  border-radius: 0rpx 20rpx 20rpx 0rpx;
}
.blogItem .body .piclist .pic.only {
  border-radius: 20rpx;
}
.blogItem .body .piclist .pic image {
  width: 100%;
  height: 100%;
}
.blogItem .info {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 22rpx;
  color: #666;
}
.blogItem .info .hits {
  display: flex;
  justify-content: center;
  align-items: center;
}
.blogItem .info .hits .iconfont {
  margin-right: 10rpx;
}
.blogItem .info .comments {
  display: flex;
  justify-content: center;
  align-items: center;
}
.blogItem .info .comments .iconfont {
  margin-right: 10rpx;
}
.blogItem .info .like {
  display: flex;
  justify-content: center;
  align-items: center;
}
.blogItem .info .like .iconfont {
  margin-right: 10rpx;
}

